              },
              {
                "type": "Label",
                "text": "Database User:"
              },
              {
                "type": "Entry",
                "text": "",
                "variable": "database_user"
              },
              {
                "type": "Label",
                "text": "Database Password:"
              },
              {
                "type": "Entry",
                "text": "",
                "variable": "database_password",
