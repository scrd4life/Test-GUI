        "font": {
          "family": "Arial",
          "size": 12,
          "color": "black"
        }
      },
      "tabs": [
        {
          "Data": {
            "widgets": [
              {
                "type": "Label",
                "text": "Select a stock to analyze:"
              },
              {
                "type": "Combobox",
                "options": [
                  "AAPL",
                  "MSFT",
                  "AMZN"
                ]
              },
              {
                "type": "Button",
                "text": "Get Data",
                "command": "self.get_data"
              },
              {
                "type": "Label",
                "text": "Data Range:"
              },
              {
                "type": "Radiobutton",
                "text": "1 Year",
                "value": "1y"
              },
              {
                "type": "Radiobutton",
                "text": "3 Years",
                "value": "3y"
              },
              {
                "type": "Radiobutton",
                "text": "5 Years",
                "value": "5y"
              },
              {
                "type": "Button",
                "text": "Calculate",
                "command": "self.calculate"
              }
            ]
          }
        },
        {
          "Visualization": {
            "widgets": [
              {
                "type": "Label",
                "text": "Select a visualization type:"
              },
              {
                "type": "Combobox",
                "options": [
                  "Line Chart",
                  "Bar Chart",
                  "Candlestick Chart"
                ]
              },
              {
                "type": "Button",
                "text": "Create Visualization",
                "command": "self.create_visualization"
              }
            ]
          }
        },
        {
          "Prediction": {
            "widgets": [
              {
                "type": "Label",
                "text": "Select a prediction algorithm:"
              },
              {
                "type": "Combobox",
                "options": [
                  "Linear Regression",
                  "Logistic Regression",
                  "Random Forest"
                ]
              },
              {
                "type": "Button",
                "text": "Train Model",
                "command": "self.train_model"
              },
              {
                "type": "Button",
                "text": "Make Prediction",
                "command": "self.make_prediction"
              }
            ]
          }
        }
      ]
    },
    "Settings": {
      "title": "Settings",
      "size": [
        500,
